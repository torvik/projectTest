<%= form_for @provider, :html => { :class => "form-horizontal provider" } do |f| %>

  <% if @provider.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @provider.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :cep, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cep, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cep) %>
  </div>
  <div class="form-group">
    <%= f.label :phone1, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone1, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone1) %>
  </div>
  <div class="form-group">
    <%= f.label :phone2, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone2, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone2) %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%=f.error_span(:email) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                providers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<%- model_class = Provider -%>
 <div class="row">
                <div class="col-lg-12">
                  <div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
                  </div>               
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @provider.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @provider.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cep) %>:</strong></dt>
  <dd><%= number_to_cep(@provider.cep) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone1) %>:</strong></dt>
  <dd><%= number_to_phone(@provider.phone1) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone2) %>:</strong></dt>
  <dd><%=number_to_phone(@provider.phone2) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @provider.email %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              providers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_provider_path(@provider), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              provider_path(@provider),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%- model_class = Expense -%>
 <div class="row">
                <div class="col-lg-12">
                  <div class="page-header">
                      <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

                  </div>               
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->


<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @expense.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @expense.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_expense) %>:</strong></dt>
  <dd><%= @expense.date_expense.strftime("%d/%m/%Y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_payment) %>:</strong></dt>
  <dd><%= @expense.date_payment.strftime("%d/%m/%Y") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= number_to_currency(@expense.price) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_form) %>:</strong></dt>
  <dd><%= @expense.payment_form %></dd>
   <dt><strong><%= model_class.human_attribute_name(:type_expense) %>:</strong></dt>
  <dd><%= @expense.type_expense %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              expenses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_expense_path(@expense), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              expense_path(@expense),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
